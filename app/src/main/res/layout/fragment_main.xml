<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_height"
        android:layout_gravity="top"
        android:background="@color/color_background_tint"
        app:itemBackground="@color/color_background_tint"
        app:itemIconSize="24dp"
        app:itemIconTint="@drawable/navigation_selector_icon"
        app:itemTextAppearanceActive="@style/Widget.NavigationView"
        app:itemTextAppearanceInactive="@style/Widget.NavigationView"
        app:itemTextColor="@drawable/navigation_selector_title"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/navigation_bar"
        app:elevation="0dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>